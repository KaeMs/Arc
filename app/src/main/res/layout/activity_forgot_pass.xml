<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    android:paddingTop="@dimen/default_activity_content_padding"
    tools:ignore="RtlHardcoded">

    <ImageView
        android:id="@+id/forgot_pass_logo"
        android:layout_width="@dimen/login_logo_size"
        android:layout_height="@dimen/login_logo_size"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/logo" />

    <com.med.fast.customviews.CustomFontTextView
        android:id="@+id/forgot_pass_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/forgot_pass_email_et"
        android:layout_below="@+id/forgot_pass_logo"
        android:text="@string/find_your_email" />

    <com.med.fast.customviews.CustomFontEditText
        android:id="@+id/forgot_pass_email_et"
        android:layout_width="@dimen/login_edittext_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_pass_email_tv"
        android:layout_centerHorizontal="true"
        android:hint="@string/email" />

    <com.med.fast.customviews.CustomFontButton
        android:id="@+id/forgot_pass_search_btn"
        android:layout_width="@dimen/login_edittext_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_pass_email_et"
        android:layout_centerHorizontal="true"
        android:text="@string/search" />
</RelativeLayout>