<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="RtlHardcoded"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    app:contentPadding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*" >

                <!-- Medicine Name -->
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <com.med.fast.customviews.CustomFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="@string/medicine_name"/>

                    <com.med.fast.customviews.CustomFontTextView
                        android:id="@+id/management_medicine_item_medicine_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/medicine_name_placeholder"/>

                </TableRow>

                <!-- Medicine Form -->
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp">

                    <com.med.fast.customviews.CustomFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="@string/medicine_form"/>

                    <com.med.fast.customviews.CustomFontTextView
                        android:id="@+id/management_medicine_item_medicine_form"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/medicine_form_placeholder"/>

                </TableRow>

                <!-- Method of Administration -->
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp">

                    <com.med.fast.customviews.CustomFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="@string/medicine_administration_method"/>

                    <com.med.fast.customviews.CustomFontTextView
                        android:id="@+id/management_medicine_item_administration_method"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/medicine_administration_method_placeholder"/>

                </TableRow>

                <!-- Administration Dose -->
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp">

                    <com.med.fast.customviews.CustomFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="@string/medicine_administration_dose"/>

                    <com.med.fast.customviews.CustomFontTextView
                        android:id="@+id/management_medicine_item_administration_dose"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/medicine_administration_dose_placeholder"/>

                </TableRow>

                <!-- Medicine Frequency -->
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp">

                    <com.med.fast.customviews.CustomFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="@string/medicine_frequency"/>

                    <com.med.fast.customviews.CustomFontTextView
                        android:id="@+id/management_medicine_item_frequency"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/medicine_frequency_placeholder"/>

                </TableRow>

                <!-- Created Date -->
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp">

                    <com.med.fast.customviews.CustomFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="@string/created_date"/>

                    <com.med.fast.customviews.CustomFontTextView
                        android:id="@+id/management_medicine_item_created_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/placeholder_date"/>

                </TableRow>

            </TableLayout>

            <include layout="@layout/management_operation_editdelete_buttons"/>

        </LinearLayout>

        <include layout="@layout/management_status_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    
</android.support.v7.widget.CardView>