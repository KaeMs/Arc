<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/summary_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/summary_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/summary_photo"
                android:layout_centerHorizontal="true"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Nama"
                android:textColor="#222"
                android:textSize="22dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/summary_name"
                android:layout_alignLeft="@+id/summary_name"
                android:layout_alignRight="@+id/summary_name"
                android:layout_alignStart="@+id/summary_name"
                android:layout_below="@+id/summary_name"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/summary_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:padding="8dp"
                    android:text="dob"
                    android:textColor="#666"
                    android:textSize="14dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/summary_jenis_kelamin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:padding="8dp"
                    android:text="jenkel"
                    android:textColor="#666"
                    android:textSize="10dp" />
            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
