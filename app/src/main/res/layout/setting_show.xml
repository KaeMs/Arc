<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardElevation="5dp"
    app:contentPadding="@dimen/default_card_content_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/greyLight">

        <include layout="@layout/summary_header" />
        <com.med.fast.customviews.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_profile_picture" />
        <ImageView
            android:id="@+id/setting_profile_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/photo"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/greyLight"
            android:orientation="vertical"
            android:padding="20dp">

            <com.med.fast.customviews.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setting_name" />

            <com.med.fast.customviews.CustomFontEditText
                android:id="@+id/setting_firstNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey"
                android:hint="@string/first_name"
                android:maxLength="50" />

            <com.med.fast.customviews.CustomFontEditText
                android:id="@+id/setting_lastNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_grey"
                android:hint="@string/last_name"
                android:maxLength="75" />

            <com.med.fast.customviews.CustomFontTextView
                android:id="@+id/setting_profile_dob_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setting_dob" />

            <com.med.fast.customviews.CustomFontTextView
                android:id="@+id/setting_dobTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <com.med.fast.customviews.CustomFontTextView
                android:id="@+id/setting_profile_gender_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/setting_gender" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.med.fast.customviews.CustomFontRadioButton
                    android:id="@+id/setting_maleRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/male" />

                <com.med.fast.customviews.CustomFontRadioButton
                    android:id="@+id/setting_femaleRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/female" />

            </RadioGroup>

            <com.med.fast.customviews.CustomFontTextView
                android:id="@+id/setting_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/setting_forgot_password" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.med.fast.customviews.CustomFontButton
                    android:id="@+id/setting_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/submit"
                    android:textSize="@dimen/font_small_medium"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="100dp" />

                <com.med.fast.customviews.CustomFontButton
                    android:layout_toRightOf="@+id/setting_submit"
                    android:id="@+id/setting_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:padding="8dp"
                    android:text="@string/back"
                    android:textSize="@dimen/font_small_medium"
                    />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
