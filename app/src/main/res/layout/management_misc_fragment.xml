<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/management_miscfragment_swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/default_activity_content_padding"
        tools:ignore="RtlHardcoded">

        <com.med.fast.customviews.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voluptuary_habit" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.med.fast.customviews.CustomFontTextView
                android:id="@+id/management_miscfragment_voluptuary_habit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_grey"
                android:text="@string/misc_voluptuary_placeholder" />

            <ProgressBar
                android:id="@+id/management_miscfragment_voluptuary_habit_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/progressbar_tosca" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/management_miscfragment_voluptuary_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btnMediumHeight"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_edit_selector"
            android:contentDescription="@string/edit"
            android:text="@string/cancel"
            android:textColor="@color/black" />

    </LinearLayout>



</android.support.v4.widget.SwipeRefreshLayout>