<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/default_activity_content_padding"
    tools:ignore="RtlHardcoded">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="@dimen/default_activity_content_padding"
        android:src="@drawable/logo_white_medium"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Summary -->
            <LinearLayout
                android:id="@+id/drawer_summary_wrapper"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnLargeHeight"
                android:paddingLeft="@dimen/drawer_horizontal_padding"
                android:paddingRight="@dimen/drawer_horizontal_padding"
                android:background="@drawable/button_transparent_tosca"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_summary_black"
                    android:contentDescription="@string/summary"/>

                <com.med.fast.customviews.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/summary" />

            </LinearLayout>

            <!-- ID Card -->
            <LinearLayout
                android:id="@+id/drawer_idcard_wrapper"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnLargeHeight"
                android:paddingLeft="@dimen/drawer_horizontal_padding"
                android:paddingRight="@dimen/drawer_horizontal_padding"
                android:background="@drawable/button_transparent_tosca"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_idcard_black"
                    android:contentDescription="@string/my_id_card"/>

                <com.med.fast.customviews.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/my_id_card" />

            </LinearLayout>

            <!-- Visit Management -->
            <LinearLayout
                android:id="@+id/drawer_visit_wrapper"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnLargeHeight"
                android:paddingLeft="@dimen/drawer_horizontal_padding"
                android:paddingRight="@dimen/drawer_horizontal_padding"
                android:background="@drawable/button_transparent_tosca"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_hospital_black"
                    android:contentDescription="@string/visit_management"/>

                <com.med.fast.customviews.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/visit_management" />

            </LinearLayout>

            <!-- Surgery Management -->
            <LinearLayout
                android:id="@+id/drawer_surgery_wrapper"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnLargeHeight"
                android:paddingLeft="@dimen/drawer_horizontal_padding"
                android:paddingRight="@dimen/drawer_horizontal_padding"
                android:background="@drawable/button_transparent_tosca"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_hospital_black"
                    android:contentDescription="@string/surgery_management"/>

                <com.med.fast.customviews.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/surgery_management" />

            </LinearLayout>

            <!-- Visit Management -->
            <LinearLayout
                android:id="@+id/drawer_allergy_wrapper"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnLargeHeight"
                android:paddingLeft="@dimen/drawer_horizontal_padding"
                android:paddingRight="@dimen/drawer_horizontal_padding"
                android:background="@drawable/button_transparent_tosca"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_allergy_black"
                    android:contentDescription="@string/allergy_management"/>

                <com.med.fast.customviews.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/allergy_management" />

            </LinearLayout>

            <!-- Disease Management -->
            <LinearLayout
                android:id="@+id/drawer_disease_wrapper"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnLargeHeight"
                android:paddingLeft="@dimen/drawer_horizontal_padding"
                android:paddingRight="@dimen/drawer_horizontal_padding"
                android:background="@drawable/button_transparent_tosca"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_disease_black"
                    android:contentDescription="@string/disease_management"/>

                <com.med.fast.customviews.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/disease_management" />

            </LinearLayout>

            <!-- Disease Management -->
            <LinearLayout
                android:id="@+id/drawer_medicine_wrapper"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnLargeHeight"
                android:paddingLeft="@dimen/drawer_horizontal_padding"
                android:paddingRight="@dimen/drawer_horizontal_padding"
                android:background="@drawable/button_transparent_tosca"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_medicine_black"
                    android:contentDescription="@string/medicine_management"/>

                <com.med.fast.customviews.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/medicine_management" />

            </LinearLayout>

            <!-- Accident History Management -->
            <LinearLayout
                android:id="@+id/drawer_accident_wrapper"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnLargeHeight"
                android:paddingLeft="@dimen/drawer_horizontal_padding"
                android:paddingRight="@dimen/drawer_horizontal_padding"
                android:background="@drawable/button_transparent_tosca"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_accident_black"
                    android:contentDescription="@string/accident_history_management"/>

                <com.med.fast.customviews.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/accident_history_management" />

            </LinearLayout>

            <!-- Lab Result Management -->
            <LinearLayout
                android:id="@+id/drawer_labresult_wrapper"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnLargeHeight"
                android:paddingLeft="@dimen/drawer_horizontal_padding"
                android:paddingRight="@dimen/drawer_horizontal_padding"
                android:background="@drawable/button_transparent_tosca"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_labresult_black"
                    android:contentDescription="@string/lab_result_management"/>

                <com.med.fast.customviews.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/lab_result_management" />

            </LinearLayout>

            <!-- Misc Management -->
            <LinearLayout
                android:id="@+id/drawer_misc_wrapper"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnLargeHeight"
                android:paddingLeft="@dimen/drawer_horizontal_padding"
                android:paddingRight="@dimen/drawer_horizontal_padding"
                android:background="@drawable/button_transparent_tosca"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_misc_black"
                    android:contentDescription="@string/misc_management"/>

                <com.med.fast.customviews.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="@string/misc_management" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>