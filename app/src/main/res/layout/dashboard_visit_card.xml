<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="RtlHardcoded"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    app:contentPadding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*" >

            <!-- Date -->
            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <com.med.fast.customviews.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/visiting_date"/>

                <com.med.fast.customviews.CustomFontTextView
                    android:id="@+id/visit_card_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/placeholder_date"/>

            </TableRow>

            <!-- Hospital Name -->
            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="15dp">

                <com.med.fast.customviews.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/hospital_name"/>

                <com.med.fast.customviews.CustomFontTextView
                    android:id="@+id/visit_card_hospital_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/placeholder_hospital_name"
                    style="@style/OneLineEllipsizeEndTV"/>

            </TableRow>

            <!-- Doctor Name -->
            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="15dp">

                <com.med.fast.customviews.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/doctor_name"/>

                <com.med.fast.customviews.CustomFontTextView
                    android:id="@+id/visit_card_doctor_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/placeholder_doctor_name"
                    style="@style/OneLineEllipsizeEndTV"/>

            </TableRow>

            <!-- Diagnosed Diseases -->
            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="15dp">

                <com.med.fast.customviews.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/doctor_name"/>

                <com.med.fast.customviews.CustomFontTextView
                    android:id="@+id/visit_card_diagnosed_diseases"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/placeholder_diagnosed_diseases"/>

            </TableRow>

        </TableLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/visit_card_pager"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_gravity="end"
            android:gravity="end">

            <ImageView
                android:id="@+id/visit_card_edit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btnMediumHeight"
                android:background="@drawable/button_edit_selector"
                android:layout_marginRight="10dp"
                android:text="@string/cancel"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/visit_card_delete"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btnMediumHeight"
                android:text="@string/add"
                android:background="@drawable/button_delete_selector"
                android:textColor="@color/textcolor_white_to_tosca"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>