<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/greyOpa60">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <item>
        <selector>
            <item android:drawable="@drawable/border_blue_radius18" android:state_pressed="true" />
            <item android:drawable="@drawable/background_blue_radius18" android:state_activated="true" />
            <item android:drawable="@drawable/background_blue_radius18" />
        </selector>
    </item>

</ripple>