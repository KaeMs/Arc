<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/greyDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/AppTheme.EditTextStyle</item>
        <item name="android:tabWidgetStyle">@android:style/Widget.TabWidget</item>
        <item name="android:textViewStyle">@style/AppTheme.TextViewStyle</item>
        <item name="android:radioButtonStyle">@style/AppTheme.RadioButtonStyle</item>
        <item name="android:buttonStyle">@style/AppTheme.ButtonStyle</item>
    </style>

    <style name="AppTheme.EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:background">@drawable/background_loginedittext</item>
        <item name="android:paddingLeft">@dimen/row_text_padding</item>
        <item name="android:paddingRight">@dimen/row_text_padding</item>
    </style>

    <style name="AppTheme.TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorLink">@color/pink</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/pink</item>
        <item name="colorControlHighlight">@color/pink</item>
        <item name="android:colorPressedHighlight">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink</item>
        <item name="colorPrimary">@color/pink</item>
        <item name="colorControlActivated">@color/pink</item>
        <item name="buttonTint">@color/pink</item>
    </style>

    <!-- Initial Data Theme -->
    <style name="AppTheme.InitialData" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/AppTheme.InitialData.ActivityTransition</item>
        <item name="android:editTextStyle">@style/AppTheme.InitialData.EditTextStyle</item>
    </style>

    <style name="AppTheme.InitialData.EditTextStyle" parent="AppTheme.EditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="AppTheme.InitialData.ActivityTransition" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_right_to_start</item>
        <item name="android:activityOpenExitAnimation">@anim/translate_start_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/translate_left_to_start</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_start_to_right</item>
    </style>

    <!-- Others -->
    <style name="OneLineEllipsizeEndTV" parent="@android:style/Widget.TextView">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TwoLinesEllipsizeEndTV" parent="@android:style/Widget.TextView">
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
